        <android.support.v7.widget.RecyclerView
            android:id="@+id/content_crafting_queue_resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/content_crafting_queue_clear_queue"
            android:layout_below="@id/content_crafting_queue_engrams"
            android:padding="@dimen/resource_view_holder_padding"/>

