<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:padding="2dp">

    <ImageView
        android:id="@+id/list_item_engram_imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/crafting_queue_background"
        android:src="@drawable/structures_stone_reinforced_dinosaur_gate" />

    <TextView
        android:id="@+id/list_item_engram_nameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/list_item_engram_imageView"
        android:fontFamily="sans-serif-smallcaps"
        android:singleLine="true"
        android:text="nameText"
        android:textColor="@color/colorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_engram_quantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:text="x0"
        android:textAlignment="center"
        android:textColor="@color/text_color_quantity"
        android:textSize="24sp"
        android:textStyle="bold" />

