<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:showIn="@layout/activity_detail">

    <NumberPicker
        android:id="@+id/engram_detail_quantityNumberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/engram_detail_resources"
        android:layout_marginRight="5dp"
        android:descendantFocusability="blocksDescendants"
        android:solidColor="@color/crafting_queue_background"
        android:theme="@style/AppTheme.Picker" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/engram_detail_resources"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/engram_detail_quantityNumberPicker"
        android:scrollbars="vertical" />
</RelativeLayout>