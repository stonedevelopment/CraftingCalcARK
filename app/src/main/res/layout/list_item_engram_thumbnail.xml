<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/engram_grid_view_holder_thumbnail_size"
                android:layout_height="@dimen/engram_grid_view_holder_thumbnail_size"
                android:padding="@dimen/engram_grid_view_holder_padding">

    <ImageView
        android:id="@+id/list_item_engram_thumbnail_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/displaycase_background_transparent"
        android:src="@drawable/structures_stone_stone_wall"/>

    <TextView
        android:id="@+id/list_item_engram_thumbnail_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:ellipsize="marquee"
        android:fontFamily="sans-serif-smallcaps"
        android:text="nameText"
        android:textColor="@android:color/white"
        android:textSize="@dimen/engram_grid_view_holder_name_text_size"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/list_item_engram_thumbnail_quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="sans-serif"
        android:text="x0"
        android:textAlignment="center"
        android:textColor="@color/text_color_quantity"
        android:textSize="@dimen/engram_grid_view_holder_quantity_text_size"
        android:textStyle="bold"/>

</RelativeLayout>