<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="@dimen/craftable_engram_grid_view_holder_size"
                android:layout_height="@dimen/craftable_engram_grid_view_holder_size"
                android:padding="@dimen/craftable_engram_grid_view_holder_padding">

    <ImageView
        android:id="@+id/list_item_engram_thumbnail_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@drawable/frame_engram_crafting_queue"/>

    <TextView
        android:id="@+id/list_item_engram_thumbnail_name_text_view"
        style="@style/AppTheme.Text.Engram.Queue.Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/display_case_view_holder_padding"/>

    <TextView
        android:id="@+id/list_item_engram_thumbnail_quantity_text_view"
        style="@style/AppTheme.Text.Engram.Queue.Quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>