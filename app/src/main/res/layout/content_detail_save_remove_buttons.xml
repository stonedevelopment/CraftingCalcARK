<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/removeButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginEnd="@dimen/detail_padding"
        android:background="@drawable/frame"
        android:onClick="RemoveAndFinish"
        android:text="@string/content_detail_remove_button"/>

    <Button
        android:id="@+id/saveButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/detail_padding"
        android:onClick="SaveAndFinish"
        android:background="@drawable/frame"
        android:text="@string/content_detail_save_button"/>

</LinearLayout>