<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/content_main_top_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/grid_layout_padding">

            <include
                layout="@layout/content_main_top"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/content_main_bottom_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/grid_layout_padding">

            <include
                layout="@layout/content_main_bottom"/>

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            layout="@layout/content_ads"/>

    </FrameLayout>

</LinearLayout>
