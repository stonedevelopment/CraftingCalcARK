<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <com.lapism.searchview.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="com.lapism.searchview.SearchBehavior"
                app:search_hint="Search Engrams..."
                app:search_shadow="false"
                app:search_theme="play_store"
                app:search_voice="true"/>

        </android.support.design.widget.AppBarLayout>

        <include layout="@layout/content_main"/>

        <include layout="@layout/layout_bottom_sheet"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/color_selector_fab_menu"
            android:src="@drawable/ic_show_bottom_sheet_light"
            app:layout_anchor="@id/bottom_sheet"
            app:layout_anchorGravity="top|end"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuOptionCalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|bottom"
            android:backgroundTint="@color/color_selector_fab_menu_option_positive"
            android:src="@drawable/ic_calculate_contents"
            app:fabSize="mini"
            app:layout_anchor="@id/fabMenu"
            app:layout_anchorGravity="top"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabMenuOptionClearQueue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:backgroundTint="@color/color_selector_fab_menu_option_negative"
            android:src="@drawable/ic_clear_contents"
            app:fabSize="mini"
            app:layout_anchor="@id/fabMenuOptionCalculate"
            app:layout_anchorGravity="start"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_main"/>

</android.support.v4.widget.DrawerLayout>