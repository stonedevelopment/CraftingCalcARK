<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="AppTheme.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NewSettings">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <!--<item name="android:textColorTertiary">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar.Splash">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay">
    </style>

    <style name="AppTheme.PopupOverlay">
    </style>

    <style name="AppTheme.Settings">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Text">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Text.Status">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/backgroundQueue</item>
    </style>

    <style name="AppTheme.Text.DisplayCase"/>

    <style name="AppTheme.Text.DisplayCase.Hierarchy">
        <!--<item name="android:textSize">@dimen/text_size_small</item>-->
    </style>

    <style name="AppTheme.Text.Engram">
        <!--<item name="android:textSize">@dimen/text_size_small</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Engram.Name">
        <item name="android:ellipsize">marquee</item>
        <!--<item name="android:background">@color/backgroundQueue_50</item>-->
        <item name="android:maxLines">3</item>
    </style>

    <style name="AppTheme.Text.Engram.Quantity">
        <item name="android:textAlignment">center</item>
        <!--<item name="android:background">@color/backgroundQueue_50</item>-->
        <!--<item name="android:textSize">@dimen/text_size_medium</item>-->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Resource">
        <!--<item name="android:textSize">@dimen/text_size_small</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.Resource.Name">
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">3</item>
    </style>

    <style name="AppTheme.Text.Resource.Quantity">
        <item name="android:textAlignment">textEnd</item>
        <item name="android:background">@color/backgroundQueue_50</item>
        <!--<item name="android:textSize">@dimen/text_size_medium</item>-->
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Detail"/>

    <style name="AppTheme.Text.Detail.Name">
        <item name="android:textSize">@dimen/text_size_extra_large</item>
        <item name="android:text">@string/content_detail_mock_text_name</item>
    </style>

    <style name="AppTheme.Text.Detail.Category">
        <!--<item name="android:textSize">@dimen/text_size_small</item>-->
        <item name="android:text">@string/content_detail_mock_text_category</item>
    </style>

    <style name="AppTheme.Text.Detail.DLC">
        <!--<item name="android:textSize">@dimen/text_size_small</item>-->
        <item name="android:text">@string/content_detail_mock_text_dlc</item>
    </style>

    <style name="AppTheme.Text.Detail.Station">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:text">@string/content_detail_station_and_level_format</item>
    </style>

    <style name="AppTheme.Text.Detail.Level">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:text">@string/content_detail_required_level_format</item>
    </style>

    <style name="AppTheme.Text.Detail.Description">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:text">@string/content_detail_mock_text_description</item>
    </style>

    <style name="AppTheme.Text.Detail.Resource">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.Text.Detail.Resource.Name"/>

    <style name="AppTheme.Text.Detail.Resource.Quantity">
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.Picker">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.UpdateStatus">
        <!--<item name="android:textSize">@dimen/text_size_extra_small</item>-->
    </style>

    <style name="AppTheme.Text.Intro">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Text.Intro.Heading">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AppTheme.Text.Intro.Description">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Text.Layout"/>

    <style name="AppTheme.Text.Layout.Heading"/>

    <style name="AppTheme.Text.Layout.Heading.Normal"/>

    <style name="AppTheme.Text.Layout.Heading.Normal.Italic">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AppTheme.Text.Layout.Heading.Large">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
</resources>
