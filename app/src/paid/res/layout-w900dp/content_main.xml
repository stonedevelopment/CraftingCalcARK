<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/content_main_top_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/grid_layout_padding"
        android:paddingEnd="0dp"
        android:paddingStart="@dimen/grid_layout_padding">

        <include
            layout="@layout/content_main_top"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/content_main_bottom_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingBottom="@dimen/grid_layout_padding"
        android:paddingEnd="@dimen/grid_layout_padding"
        android:paddingStart="@dimen/grid_layout_padding"
        android:paddingTop="@dimen/grid_layout_padding">

        <include
            layout="@layout/content_main_bottom"/>

    </FrameLayout>

</LinearLayout>

